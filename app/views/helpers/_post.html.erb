<li>
  <div class='user-post'>
    <div class='user-details'>
      <h3><%= post.title %></h3>
      <p><%= post.text %></p>
    </div>
    <div class='comments-likes'>
      <span>
        Comments:<%= post.comments_counter.nil? ? '0' : post.comments_counter %>
      </span>
      <span>
        Likes:<%= post.likes_counter.nil? ? '0' : post.likes_counter %>
      </span>
    </div>   
  </div>
  <%= render 'helpers/all_comments', post: post %>
</li>